<% content_for :title, 'Оформление заказа' %>
<% content_for :description, '' %>
<% content_for :keywords, '' %>
<% content_for :body do %>
  <section id="product_list">
    <div class="container">
      <h2>Ваш список товаров</h2>
      <div id="all_your_products">
        <% products.each do |value| %>
          <div class="product-flexbox">
            <div class="image-block"><%= image_tag(value[:product].thumb_picture, { alt: value[:product].name }) %></div>
            <div class="description-grid">
              <div class="title-block"><%= value[:product].name %></div>
              <div class="price-block"><span><%= value[:product].price %></span>&nbsp;<span><%= image_tag('static/ruble-currency-sign.svg', { alt: 'rub' }) %></span></div>
              <div class="count-block">
                <%= link_to minus_product_path(value[:product]), class: 'minus-product' do %>
                  <i class="material-icons">remove</i>
                <% end %>
                <span class="product-type-count"><%= value[:count] %></span>
                <%= link_to plus_product_path(value[:product]), class: 'plus-product' do %>
                  <i class="material-icons">add</i>
                <% end %>
              </div>
              <div class="delete-block">
                <%= link_to remove_products_path(value[:product]), class: 'remove_products' do %>
                  <i class="material-icons">delete_forever</i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="to_order">
        <p>Итого: <span id="tottal-price"><%= tottal_price %></span>&nbsp;<span><%= image_tag('static/ruble-currency-sign.svg', { alt: 'rub' }) %></span></p>
      </div>
    </div>
  </section>
  <section id="form-order">
    <div class="container">
      <h2>Оформление заказа</h2>
      <form action="#">
        <div class="input-field">
          <input id="user" type="text" class="validate">
          <label for="user">Фамилия Имя Отчество</label>
          <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
        <div class="input-field">
          <input id="phone" type="text" class="validate">
          <label for="phone">Телефон</label>
          <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
        <div class="input-field">
          <input id="region" type="text" class="validate">
          <label for="region">Регион</label>
          <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
        <div class="input-field">
          <input id="city" type="text" class="validate">
          <label for="city">Город</label>
          <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
        <div class="input-field">
          <input id="address" type="text" class="validate">
          <label for="address">Адрес доставки</label>
          <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
        <div class="input-field">
          <input id="index" type="text" class="validate">
          <label for="index">Индекс</label>
          <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
        <div class="input-field">
          <textarea id="textarea_comment" class="materialize-textarea"></textarea>
          <label for="textarea_comment">Коментарии</label>
        </div>
        <label class="checkbox-confirm">
          <input type="checkbox" class="filled-in"/>
          <span>Принять <a href="<%= privacy_agreement_path %>" target="_blank">политику приватности</a></span>
        </label>
        <div class="input-field">
          <input class="btn waves-effect waves-light purple-hover-btn" value="к оплате" type="submit" class="validate">
        </div>
      </form>
    </div>
  </section>
<% end %>