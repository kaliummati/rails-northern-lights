<% if products.any? %>
  <% products.each do |product| %>
    <div class="horizontal-grid horizontal-grid--margin-top-position horizontal-grid--product-elements-position">
      <% if product.has_image? %>
        <%= image_tag(product.thumb_picture, { class: 'horizontal-grid__item-image', alt: product.name }) %>
      <% else %>
        <p>No image</p>
      <% end %>
      <h3 class="horizontal-grid__item-title"><%= product.name %> (<%= product.category.name %>)</h3>
      <div class="horizontal-grid__item-edit">
        <%= link_to edit_admin_product_path(product.id) do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
      <div class="horizontal-grid__item-delete">
        <%= link_to admin_product_destroy_path(product.id, 'search'), class: 'delete-searched-product', method: :delete do %>
          <i class="material-icons">delete_forever</i>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <h3 class="empty-index empty-index--center">Пока что нет никаких товаров</h3>
<% end %>