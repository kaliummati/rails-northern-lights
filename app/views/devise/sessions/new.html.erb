<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'castom-form castom-form--purple' }) do |f| %>
  <h1>Авторизация</h1>
  <div class="input-field input-field--margin">
    <i class="material-icons prefix">account_circle</i>
    <%= f.email_field :email, autofocus: true, autocomplete: 'off', class: alert ? 'invalid' : '' %>
    <%= f.label :email, 'Логин' %>
  </div>
  <div class="input-field input-field--margin">
    <i class="material-icons prefix">lock</i>
    <%= f.password_field :password, autocomplete: 'off', class: alert ? 'invalid' : '' %>
    <%= f.label :password, 'Пароль' %>
    <span class="helper-text error" data-error="<%= alert ? alert : '' %>"></span>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="input-field input-field--margin">
      <label class="castom-form__checkbox castom-form--checkbox-padding-left">
        <%= f.check_box :remember_me, class: 'filled-in' %>
        <span class="faq-checkbox">Запомнить</span>
      </label>
    </div>
  <% end %>
  <div class="input-field input-field--margin">
    <%= f.submit 'Войти', class: 'waves-effect waves-light btn castom-button castom-button--center castom-button--purple castom-button--input-text-white' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
